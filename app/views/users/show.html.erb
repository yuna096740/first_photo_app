<div class="bg-dark">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-light text-center">
        <div class="col-md-8 m-5 ">
          <%= image_tag @user.icon, size: '400x400', class:"rounded-circle my-3" %><br>
          <div class="my-2">
            <%= @user.name %><br>
          </div>
          <div class="mb-4">
            <%= @user.introduction %>
          </div>
          Follower: <%= User.first.followings.count %>
          <% if @user == current_user %>
            <%= link_to 'Edit',edit_user_path(@user.id), class:"btn btn-outline-success form-control" %>
            <%= link_to 'Follower', user_followings_path(@user.id), class:"form-control btn btn-outline-info mt-2" %>
          <% else %>
            <%= render 'relationships/follow_btn', user: current_user %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>