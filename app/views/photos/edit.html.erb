<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 mx-auto my-5">
      <%= form_with model: @photo, url: photo_path(@photo.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :photo %>
          <%= f.file_field :photo, accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :photo_name %>
          <%= f.text_field :photo_name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :caption %>
          <%= f.text_area :caption, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit class:"btn btn-info form-control" %>
        </div>
      <% end %>
    </div>
  </div>
</div>